  default-language:
    Haskell2010
  build-depends:
    postgresql-binary,
    -- benchmarking:
    criterion >= 1.0 && < 1.2,
    -- data:
    time,
    scientific,
    text,
    bytestring,
    -- general:
    deepseq >= 1.3 && < 1.5,
    mtl-prelude < 3,
